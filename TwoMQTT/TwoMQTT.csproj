<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <VersionPrefix>0.12.$([System.DateTime]::UtcNow.ToString(yy))$([System.DateTime]::UtcNow.DayOfYear.ToString(000)).$([System.DateTime]::UtcNow.ToString(HHmm))$([System.Math]::Floor($([MSBuild]::Divide($([System.DateTime]::UtcNow.Second), 6))))</VersionPrefix>
    <OutputType>library</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <IncludeSymbols>true</IncludeSymbols>
    <IncludeSource>true</IncludeSource>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <RepositoryUrl>https://github.com/mannkind/twomqtt</RepositoryUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.*" PrivateAssets="All"/>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="6.*-rc.*" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="6.*-rc.*" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.*-rc.*" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="6.*-rc.*" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="6.*-rc.*" />
    <PackageReference Include="Microsoft.Extensions.Options.DataAnnotations" Version="6.*-rc.*" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="6.*-rc.*" />
    <PackageReference Include="MQTTnet" Version="3.0.16" />
    <PackageReference Include="MQTTnet.Extensions.ManagedClient" Version="3.0.16" />
    <PackageReference Include="Newtonsoft.Json" Version="12.*" />
  </ItemGroup>

</Project>
